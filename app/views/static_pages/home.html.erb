<div id="service">
  <a href="#signup" class="button yellow">Join "mameblog"</a>
  <a href="#signin" class="button blue">Sign in</a>
</div>
<div id="content">
	<header>
  	<hgroup>
    	<h1>mameblog</h1>
  	</hgroup>
  	<nav>
  		<a href="#edit" class="button blue mid">Your post</a>
  		<a href="#edit" class="button green mid">Setting</a>
  	</nav>
	</header>
	<div id="greenboard">
		<nav>
  		<a href="#edit" class="button yellow big">Write New Entry</a>
  	</nav>
    <%= render 'shared/entry_all' %>
    <article>
  		<h3>entry.title</h3>
  		<p>entry.content</p>
  		<time pubdate="">entry.created_at</time>
  		<aside>
  			<p class="userId">entry.user_id</p>
  			<p class="admin">
  				<a class="button yellow">Edit</a>
  				<a class="button red">Delete</a>
  			</p>
  			<p class="permalink"><a href="#" class="button blue" target="_blank">Read more</a></p>
  		</aside>
		</article>
  </div>
</div>
<footer>
  <p>&copy;&nbsp;mameblog&nbsp;&copy;</p>
</footer>

<div id="signup" class="blackboard signup">
  <%= render 'shared/new_user' %>
</div>  
<div id="signin" class="blackboard signin">
  <%= render 'shared/signin_user' %>
</div>
<div id="edit" class="blackboard edit">
  <%= render 'shared/entry_edit' %>
</div>
<div class="message success welcome">
	<p><b>!!! Congratulations !!!</b><br>!!!!!!!!!! Welcome to "mameblog" !!!!!!!!!!<br><a href="#" class="button red">OK</a></p>
</div>
