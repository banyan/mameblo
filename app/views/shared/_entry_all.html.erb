<% @entries.each do |entry| %>
<article>
  <h3><%= link_to entry.title, entry, target: '_blank' %></h3>
  <section>
    <%= raw entry.content_as_markdown %>
  </section>
  <time pubdate="<%= entry.created_at %>"><%= link_to entry.created_at.to_s(:mameblogTimestamp), entry, target: '_blank' %></time>
  <aside>
    <p class="userId"><%= entry.user.name %></p>
    <% if signed_in? %>
    <p class="admin">
      <%= link_to 'Edit This Entry', edit_entry_path(entry), class: 'button yellow' %>
      <a href="#comingsoon" class="button red comingsoon">Delete</a>
    </p>
    <% end %>
    <p class="permalink"><a href="#comingsoon" class="button blue comingsoon">Read more</a></p>
  </aside>
</article>
<% end %>
