<li>
  <span class="title"><%= entry.title %></span>
  <span class="content"><%= simple_format(hbr(entry.content)) %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(entry.created_at) %> ago.
  </span>
  <% if current_user?(entry.user) %>
  <%= link_to "消す", entry, method: :delete,
      confirm: "消えちゃうよ?",
      title: entry.content %>
  <% end %>
</li>
