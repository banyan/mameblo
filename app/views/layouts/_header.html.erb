<header id="header">
  <h1><%= image_tag 'brothers.png', alt: 'まめぶろ' %></h1>
  <nav>
    <ul>
    <% if signed_in? %>
      <li><%= link_to "書く", root_path, class: 'button' %></li>
      <li><%= link_to current_user.name, current_user, class: 'button' %></li>
      <li><%= link_to "ブラザーズ", users_path, class: 'button' %></li>
      <li><%= link_to "設定", edit_user_path(current_user), class: 'button' %></li>
      <li><%= link_to "サインアウト", signout_path, method: "delete" %></li>
    <% else %>
    <% end %>
    </ul>
  </nav>
</header>
